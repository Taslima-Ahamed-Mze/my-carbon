{% extends 'base.html.twig' %}

{% block title %}Offers{% endblock %}

{% block body %}
    <h1>Offers</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ offer.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ offer.name }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ offer.address }}</td>
            </tr>
            <tr>
                <th>CompanyName</th>
                <td>{{ offer.companyName }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ offer.createdAt ? offer.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ offer.updatedAt ? offer.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('back_app_offers_index') }}">back to list</a>

    <a href="{{ path('back_app_offers_edit', {'id': offer.id}) }}">edit</a>

    {{ include('back/offers/_delete_form.html.twig') }}
{% endblock %}
