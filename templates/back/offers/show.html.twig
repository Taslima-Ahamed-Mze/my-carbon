{% extends 'base.html.twig' %}

{% block title %}
	User
{% endblock %}

{% block body %}
	<div class="show-wrapper">
		<h1>
			Compétence :
			{{ offer.name }}
            de : 
            {{ offer.companyName }}


		</h1>

		<a class="devisio-btn devisio-btn-back-to-list" href="{{ path('back_app_offers_index') }}">Retour à la liste</a>

		<table>

		 <tbody>
            <tr>
                <th>Id</th>
                <td>{{ offer.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ offer.name }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ offer.address }}</td>
            </tr>
            <tr>
                <th>CompanyName</th>
                <td>{{ offer.companyName }}</td>
            </tr>
        </tbody>

		</table>

		<div class="show-buttons">
			{{ include('back/offers/_delete_form.html.twig') }}
			<a class="devisio-btn devisio-btn-update" href="{{ path( 'back_app_offers_edit', { id: offer.id } ) }}">Modifier</a>
		</div>
	</div>
{% endblock %}

