{% extends 'base.html.twig' %}

{% block title %}Skills{% endblock %}

{% block body %}
    <h1>Skills</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ skills.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ skills.name }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ skills.createdAt ? skills.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ skills.updatedAt ? skills.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('back_app_skills_index') }}">back to list</a>

    <a href="{{ path('back_app_skills_edit', {'id': skills.id}) }}">edit</a>

    {{ include('back/skills/_delete_form.html.twig') }}
{% endblock %}
