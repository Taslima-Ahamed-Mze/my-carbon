{% extends 'base.html.twig' %}

{% block title %}Edit Cooptation{% endblock %}

{% block body %}

    <h2>Info</h2>
    <table >
        <tbody>
        <tr>
            <th>Comptant</th>
            <td>{{ cooptation.createdBy.lastname ~ ' ' ~ cooptation.createdBy.firstname}}</td>
        </tr>
        <tr>
            <th>Copt√©</th>
            <td>{{ cooptation.lastname ~ ' ' ~ cooptation.firstname}}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ cooptation.email }}</td>
        </tr>

        </tbody>
    </table>
    <br>
    <h3>Evolution de la cooptation</h3>


    {% set conditionMet = false %}
    {% for stepCooptation in stepCooptations %}
        {% if not conditionMet %}

            {% if displayStatus[stepCooptation.name] != null  %}
                <div>
                    <label>{{ stepCooptation.name }}</label>
                    <h2>{{ displayStatus[stepCooptation.name] }}</h2>
                </div>
                {% if displayStatus[stepCooptation.name] == 'reject' %}
                    {% set conditionMet = true %}
                {% endif %}
            {% else %}
                {% for flashError in app.flashes('error') %}
                    <div class="alert alert-danger">{{ flashError }}</div>
                {% endfor %}
                <form method="post" action="{{ path('back_app_cooptation_steps_new')}}">
                    <div>
                        <label>{{ stepCooptation.name }}</label>
                        <select name="status">
                            <option value="">Choisir</option>
                            <option value="validated">Validate</option>
                            <option value="reject">Reject</option>
                        </select>
                        <input type="hidden" name="cooptation_id" value="{{ cooptation.id }}" />
                        <input type="hidden" name="step_cooptation_id" value="{{ stepCooptation.id }}" />

                    </div>
                    <button type="submit">Submit</button>
                </form>
            {% endif %}
        {% endif %}

    {% endfor %}
    <h1>PDF Viewer</h1>

    <embed src="{{ vich_uploader_asset(cooptation, 'cvFile') }}#toolbar=0" width="100%" height="600px" type="application/pdf" style="border: none;">







{% endblock %}
