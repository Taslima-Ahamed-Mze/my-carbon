{% extends 'base.html.twig' %}

{% block title %}Contracts{% endblock %}

{% block body %}
    <h1>Contracts</h1>

    <table >
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contract.id }}</td>
            </tr>
            <tr>
                <th>Offre</th>
                <td>{{ contract.offer.name }}</td>
            </tr>
            <tr>
                <th>Entreprise</th>
                <td>{{ contract.offer.companyName }}</td>
            </tr>
            <tr>
                <th>Collaborateur</th>
                <td>{{ contract.collaborator.firstname   ~ ' ' ~  contract.collaborator.lastname }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ contract.createdAt ? contract.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ contract.updatedAt ? contract.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('back_app_contracts_index') }}">back to list</a>

    <a href="{{ path('back_app_contracts_edit', {'id': contract.id}) }}">edit</a>

    {{ include('back/contracts/_delete_form.html.twig') }}
{% endblock %}
