{% extends 'base.html.twig' %}

{% block title %}
	User
{% endblock %}

{% block body %}
	<div class="show-wrapper">
		<h1>
			Contrat de : 
            {{ contract.offer.companyName  }}


		</h1>

		<a class="devisio-btn devisio-btn-back-to-list" href="{{ path('back_app_contracts_index') }}">Retour Ã  la liste</a>

		<table>
 <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contract.id }}</td>
            </tr>
            <tr>
                <th>Offre</th>
                <td>{{ contract.offer.name }}</td>
            </tr>
            <tr>
                <th>Entreprise</th>
                <td>{{ contract.offer.companyName }}</td>
            </tr>
            <tr>
                <th>Collaborateur</th>
                <td>{{ contract.collaborator.firstname   ~ ' ' ~  contract.collaborator.lastname }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ contract.createdAt ? contract.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ contract.updatedAt ? contract.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>

		</table>

		<div class="show-buttons">
			{{ include('back/contracts/_delete_form.html.twig') }}
			<a class="devisio-btn devisio-btn-update" href="{{ path( 'back_app_contracts_edit', { id: contract.id } ) }}">Modifier</a>
		</div>
	</div>
{% endblock %}


