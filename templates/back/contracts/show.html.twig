{% extends 'base.html.twig' %}

{% block title %}Contrat{% endblock %}

{% block body %}
    <div class="show-wrapper">
        <h1>Contracts</h1>
        <a class="devisio-btn devisio-btn-back-to-list" href="{{ path('back_app_contracts_index') }}">Retour à la liste</a>

        <table >
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ contract.id }}</td>
                </tr>
                <tr>
                    <th>Offre</th>
                    <td>{{ contract.offer.name }}</td>
                </tr>
                <tr>
                    <th>Entreprise</th>
                    <td>{{ contract.offer.companyName }}</td>
                </tr>
                <tr>
                    <th>Collaborateur</th>
                    <td>{{ contract.collaborator.firstname   ~ ' ' ~  contract.collaborator.lastname }}</td>
                </tr>
                <tr>
                    <th>Date de début </th>
                    <td>{{ contract.startDate|date('d-m-Y') }}</td>
                </tr>
                <tr>
                    <th>Date de fin</th>
                    <td>{{ contract.endDate|date('d-m-Y') }}</td>
                </tr>
            </tbody>
        </table>
        <div class="show-buttons">
            {{ include('back/contracts/_delete_form.html.twig') }}
            <a class="devisio-btn devisio-btn-update" href="{{ path( 'back_app_contracts_edit', { id: contract.id } ) }}">Modifier</a>
        </div>
    </div>

{% endblock %}
