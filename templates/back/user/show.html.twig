{% extends 'base.html.twig' %}

{% block title %}
	User
{% endblock %}

{% block body %}
	<div class="show-wrapper">
		<h1>
			Utilisateur
			{{ user.firstname }}
			{{ user.lastname }}
		</h1>

		<a class="devisio-btn devisio-btn-back-to-list" href="{{ path('back_app_user_index') }}">Retour à la liste</a>

		<table>
			<tbody>
				<tr>
					<th>
						Nom
					</th>
					<td>
						{{ user.lastname }}
					</td>
				</tr>
				<tr>
					<th>
						Prénom
					</th>
					<td>
						{{ user.firstname }}
					</td>
				</tr>
				<tr>
					<th>
						Email
					</th>
					<td>
						{{ user.email }}
					</td>
				</tr>
			</tbody>
		</table>

		<div class="show-buttons">
			{{ include('back/user/_delete_form.html.twig') }}
			<a class="devisio-btn devisio-btn-update" href="{{ path( 'back_app_user_edit', { id: user.id } ) }}">Modifier</a>
		</div>
	</div>
{% endblock %}
