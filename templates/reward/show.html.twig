{% extends 'base.html.twig' %}

{% block title %}Reward{% endblock %}

{% block body %}
    <h1>Reward</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reward.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ reward.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ reward.description }}</td>
            </tr>
            <tr>
                <th>Points</th>
                <td>{{ reward.points }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ reward.createdAt ? reward.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ reward.updatedAt ? reward.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_reward_index') }}">back to list</a>

    <a href="{{ path('app_reward_edit', {'id': reward.id}) }}">edit</a>

    {{ include('reward/_delete_form.html.twig') }}
{% endblock %}
