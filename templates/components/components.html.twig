{% macro account_button() %}
	<div class="dropdown-btn relative">
		<button type="button" class="inline-flex gap-x-1.5 menu-button" aria-expanded="false" aria-haspopup="true">
			Mon compte
			<svg class="-mr-1 h-5 w-5" viewbox="0 0 20 20" fill="currentColor" aria-hidden="true">
				<path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z" clip-rule="evenodd"/>
			</svg>
		</button>

		<div class="absolute right-0 z-10 mt-2 w-36 origin-top-right rounded-md bg-white shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none dropdown" role="menu" aria-orientation="vertical" aria-labelledby="menu-button" tabindex="-1" id="dropdown-menu">
			<div class="py-1" role="none">
				{# <a href="{{ path('back_app_settings_show') }}" class="text-gray-700 block px-4 py-2 text-sm header-dropdown-item" role="menuitem" tabindex="-1" id="menu-item-0">Paramètres</a> #}
				<a href="{{ path('app_logout') }}" class="text-gray-700 block px-4 py-2 text-sm header-dropdown-item" role="menuitem" tabindex="-1" id="menu-item-2">Déconnexion</a>
			</div>
		</div>
	</div>
{% endmacro %}

