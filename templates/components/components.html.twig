			{% if is_granted('ROLE_RH') %}
				<div class="flex justify-start space-x-4"  > <img src="{{ asset('build/images/Highfiveblanc.png')}}" alt="Logo de Formation" class="Carbon"><a href="{{ path('back_default_index') }}">
