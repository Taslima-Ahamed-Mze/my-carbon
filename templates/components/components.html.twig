{% macro account_button() %}
	<div class="dropdown-btn relative">
		<button type="button" class="inline-flex gap-x-1.5 menu-button" aria-expanded="false" aria-haspopup="true">
			Mon compte
			<svg class="-mr-1 h-5 w-5" viewbox="0 0 20 20" fill="currentColor" aria-hidden="true">
				<path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z" clip-rule="evenodd"/>
			</svg>
		</button>

		<div class="absolute right-0 z-10 mt-2 w-36 origin-top-right rounded-md bg-white shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none dropdown" role="menu" aria-orientation="vertical" aria-labelledby="menu-button" tabindex="-1" id="dropdown-menu">
			<div class="py-1" role="none">
				<a href="{{ path('back_app_settings_show') }}" class="text-gray-700 block px-4 py-2 text-sm header-dropdown-item" role="menuitem" tabindex="-1" id="menu-item-0">Paramètres</a>
				<a href="{{ path('app_logout') }}" class="text-gray-700 block px-4 py-2 text-sm header-dropdown-item" role="menuitem" tabindex="-1" id="menu-item-2">Déconnexion</a>
			</div>
		</div>
	</div>
{% endmacro %}

{% macro header() %}
	<header class="header">
		{% if app.user and 'ROLE_USER' in app.user.roles %}
			<a href="{{ path('back_default_index') }}"><img src="{{ asset('build/images/logo.png') }}" alt="logo"></a>
			<ul>
				<li>
					<a href="{{ path('back_default_index') }}" class="{% if app.request.attributes.get('_route') == 'back_default_index' %}navbar-link-active{% endif %}">Tableau de bord</a>
				</li>
				<li>
					<a href="{{ path('back_app_quotation_index') }}" class="{% if app.request.attributes.get('_route') == 'back_app_quotation_index' %}navbar-link-active{% endif %}">Devis</a>
				</li>
				<li>
					<a href="{{ path('back_app_invoice_index') }}" class="{% if app.request.attributes.get('_route') == 'back_app_invoice_index' %}navbar-link-active{% endif %}">Factures</a>
				</li>
				<li>
					<a href="{{ path('back_app_client_index') }}" class="{% if app.request.attributes.get('_route') == 'back_app_client_index' %}navbar-link-active{% endif %}">Clients</a>
				</li>
				<li>
					<a href="{{ path('back_app_product_index') }}" class="{% if app.request.attributes.get('_route') == 'back_app_product_index' %}navbar-link-active{% endif %}">Produits</a>
				</li>
				<li>
					<a href="{{ path('back_app_service_index') }}" class="{% if app.request.attributes.get('_route') == 'back_app_service_index' %}navbar-link-active{% endif %}">Services</a>
				</li>
				<li>
					<a href="{{ path('back_app_category_index') }}" class="{% if app.request.attributes.get('_route') == 'back_app_category_index' %}navbar-link-active{% endif %}">Catégories</a>
				</li>
				<li>
					<a href="{{ path('back_app_payment_index') }}" class="{% if app.request.attributes.get('_route') == 'back_app_payment_index' %}navbar-link-active{% endif %}">Paiements</a>
				</li>
				{% if is_granted('ROLE_ADMIN') %}
					<li>
						<a href="{{ path('back_app_user_index') }}" class="{% if app.request.attributes.get('_route') == 'back_app_user_index' %}navbar-link-active{% endif %}">Utilisateurs</a>
					</li>
				{% endif %}
				<li>{{ _self.account_button() }}</li>
			</ul>
			{{ _self.account_button() }}
			<div class="hamburger-menu">
				<input id="menu-toggle" type="checkbox">
				<label for="menu-toggle">
					<span></span>
				</label>
			</div>
		{% else %}
			<div class="login">
				<a href="{{ path('app_login') }}" class="btn">Se connecter</a>
			</div>
		{% endif %}
	</header>
{% endmacro %}

{% macro footer() %}
	<footer class="footer">
		<p>&copy;
			{{ "now"|date("Y") }}
			Devisio. Tous droits réservés.</p>
	</footer>
{% endmacro %}

{% macro table_actions(entityType, entity, download, generate, payment) %}
	<div class="dropdown-actions">
		<button class="dropdown-toggle" aria-haspopup="true" aria-expanded="false">
			<i class="fa-solid fa-ellipsis-vertical"></i>
		</button>
		<div class="dropdown-menu">
			<a class="show" href="{{ path('back_app_' ~ entityType ~ '_show', { id: entity.id }) }}">
				<i class="fa-solid fa-eye"></i>
			</a>
			<a class="edit" href="{{ path('back_app_' ~ entityType ~ '_edit', { id: entity.id }) }}">
				<i class="fa-solid fa-pen"></i>
			</a>
			{% if download %}
				<a href="{{ path( 'back_app_download_' ~ entityType, { id: entity.id } ) }}" target="_blank">
					<i class="fa-solid fa-download"></i>
				</a>
			{% endif %}
			{% if generate %}
				<a href="{{ path( 'back_app_generate_invoice', { id: entity.id } ) }}" target="_blank">
					<i class="fa-sharp fa-solid fa-receipt"></i>
				</a>
			{% endif %}
			{% if payment %}
				<a class="edit" href="{{ path('back_app_payment_new',{'invoice': entity.id}) }}">
					<i class="fa-solid fa-euro-sign"></i>
				</a>
			{% endif %}


			<form method="post" action="{{ path('back_app_' ~ entityType ~ '_delete', { id: entity.id }) }}" onsubmit="return confirm('Es-tu sûr de vouloir supprimer cet élément ?');">
				<input type="hidden" name="_method" value="DELETE">
				<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ entity.id) }}">
				<button class="delete-button" type="submit">
					<i class="fa-solid fa-trash"></i>
				</button>
			</form>
		</div>
	</div>
{% endmacro %}
