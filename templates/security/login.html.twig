{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}
	<div class="flex justify-center items-center h-screen bg-[#282B2A]">
	<img src="{{ asset('build/images/logonoir.png') }}" class="w-[40%]" alt="">
		<form method="post" class="flex flex-col">
			{% if error %}
				<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			{% if app.user %}
				<div class="mb-3">
					You are logged in as
					{{ app.user.userIdentifier }},
					<a href="{{ path('app_logout') }}">Logout</a>
				</div>
			{% endif %}
			<h1 class="h3 mb-5 mt-5 font-weight-normal text-white">Veuillez vous connecter</h1>
			<label for="inputEmail" class="text-white">Email</label>
			<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control   'class' => ' mt-1
				                    block
				                    w-full
				                    rounded-md
				                    bg-white
				                    border-transparent
				                    focus:border-gray-500 focus:bg-white focus:ring-0'" autocomplete="email" required autofocus>
			<label class="mt-5 text-white" for="inputPassword" >Mot de passe</label>
			<input type="password" name="password" id="inputPassword" class="form-control 'class' => ' mt-1
				                    block
				                    w-full
				                    rounded-md
				                    bg-white
				                    border-transparent
				                    focus:border-gray-500 focus:bg-white focus:ring-0'" autocomplete="current-password" required>

			{# <a href="{{ path('front_app_reset_password') }}">
				<small>Mot de passe oubli√©?</small>
			</a> #}
			<input
			type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			{#
						        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
						        See https://symfony.com/doc/current/security/remember_me.html
			
						        <div class="checkbox mb-3">
						            <label>
						                <input type="checkbox" name="_remember_me"> Remember me
						            </label>
						        </div>
						    #}

			<button class="btn mt-5 devisio-btn" type="submit">
				Connexion
			</button>
		</form>
	</div>
{% endblock %}
